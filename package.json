{
  "name": "configure-border0-credentials",
  "version": "0.0.4",
  "description": "GitHub Action to exchange GitHub OIDC token for Border0 credentials",
  "main": "dist/index.js",
  "scripts": {
    "build": "ncc build src/index.ts -o dist --source-map --license licenses.txt",
    "format": "prettier --write 'src/**/*.ts'",
    "lint": "eslint src/**/*.ts",
    "package": "npm run build",
    "test": "jest",
    "all": "npm run format && npm run lint && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/borderzero/configure-border0-credentials.git"
  },
  "keywords": [
    "border0",
    "oidc",
    "github-actions",
    "authentication"
  ],
  "author": "Border0",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/http-client": "^2.2.3"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^22.10.5",
    "@typescript-eslint/eslint-plugin": "^8.19.1",
    "@typescript-eslint/parser": "^8.19.1",
    "@vercel/ncc": "^0.38.3",
    "eslint": "^9.17.0",
    "eslint-plugin-github": "^5.0.2",
    "eslint-plugin-jest": "^28.10.0",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "ts-jest": "^29.2.5",
    "typescript": "^5.7.2"
  }
}
